$('#question_errors').html('');
$('#flash').html('');

<% if @question.errors.present? %>
  $('#question_errors').html('<%= j render "shared/errors", resource: @question %>');
<% else %>
  $('.question_<%= @question.id %>')
    .replaceWith('<%= j render "question_show", question: @question %>');
  $('#flash').html("<%= j render 'shared/flash' %>");

  <% flash.clear %>
<% end %>
