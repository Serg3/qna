$('#answer_errors').html('');
$('#flash').html('');

<% if @answer.errors.present? %>
  $('#answer_errors').html("<%= j render 'shared/errors', resource: @answer %>");
<% else %>
  $('.answer_<%= @answer.id %>').replaceWith("<%= j render @answer %>");
  $('#flash').html("<%= j render 'shared/flash' %>");

  <% flash.clear %>
<% end %>
