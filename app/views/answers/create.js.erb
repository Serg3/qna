$('#answer_errors').html('');
$('#flash').html('');

<% if @answer.errors.present? %>
  $('#answer_errors').append("<%= j render 'shared/errors', resource: @answer %>");
<% else %>
  $('.answers').append("<%= j render @answer %>");
  $('#flash').append("<%= j render 'shared/flash' %>");

  $('.new_answer_form #answer_body').val('');
  $('.nested-fields').remove();
  <% flash.clear %>
<% end %>
